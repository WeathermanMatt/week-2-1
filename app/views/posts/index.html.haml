%h1 
  ="#{@author.name} posts"

%table
  %tr
    %th Subject
    %th Body
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td= post.subject
      %td= post.body
      %td= link_to 'Show', author_post_path(author_id: post.author_id, id: post)
      %td= link_to 'Edit', edit_author_post_path(author_id: post.author_id, id: post)
      %td= link_to 'Destroy', author_post_path(author_id: post.author_id, id: post), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Post', new_author_post_path
